// filtersettings styles
#filtersettings
    background-color rgba(0, 0, 0, 0.2)
    padding 10px
    margin-top 20px
    .line
        padding: 5px
        margin auto
        text-align: center

#filtersettings.hidden
    display: none

#reset-button
    border-radius 5px
    background-color white
    cursor pointer
    padding 5px

#reset-button:active
    position relative
    top 1px

