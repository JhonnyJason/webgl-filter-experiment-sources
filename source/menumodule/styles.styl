// menu styles
menu-icon-size = 30px
menu-padding = 10px
icon-border-width = 2px

menu-height = (menu-icon-size + (2 * menu-padding))

#menu
    padding menu-padding
    width: 100%
    position fixed
    top 0
    display flex
    justify-content: space-around
    background-color alpha(color-dark, 0.2)
    box-sizing: border-box
    
    svg
        // border-radius 3px
        // border solid icon-border-width alpha(color-dark, 0.2)
        color alpha(color-dark, 0.4)
        width: menu-icon-size
        height: menu-icon-size
        box-sizing: border-box
        cursor: pointer
    .active
        color color-dark
        // border-color color-dark

    .separator
        height menu-icon-size
        width icon-border-width
        background-color: color-dark
        margin 0 7px
